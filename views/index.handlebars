<div id="container">

    

<img src="/assets/img/burger.png">



<h2>Eat-DA-Burgers</h2>

<div class="row">

<div class="col-md-6">

<div class="card">

  <div class="card-body">

      <ul>

   {{#each burgers}}

{{#unless devoured}}

<span><strong>{{this.id}} - {{this.burger_name}}</strong></span>

<button type="button" class="change-devour btn btn-primary" data-id="{{this.id}}" data-newDevour="{{devour}}">devour</button>

<hr>

{{/unless}}

{{/each}}

</ul>

  </div>

</div>

</div>

<div class="col-md-6">

<div class="card">

    <div class="card-body">

        <div>Devoured burgers</div>

        <ul>

{{#each burgers}}

{{#if devoured}}

<span><strong>{{this.id}} - {{this.burger_name}}</strong></span>

<button type="button" id="deleteButton" class="btn btn-primary" data-id="{{this.id}}">Delete</button>

<hr>

{{/if}}

{{/each}}

</ul>

    </div>

</div>

</div>

</div>







<form class="create-form">



<div class="form-group">

<input type="text" id="inputForm" placeholder="Are You Hungry?"></input>

</div>

<br>

<br>

<br>

<button type= "button" id="submitButton" type="submit">Submit</button>

</form>